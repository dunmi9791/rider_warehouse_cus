<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="rider_warehouse_cus.stock_dashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">Warehouse Temperature Dashboard</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <KpiCard name="'The Gambia SDH (-30)'" value="state.gambiaSDH.value" percentage="state.gambiaSDH.percentage"/>
                        <KpiCard name="'The Gambia BK (-30)'" value="state.gambiaBK.value" percentage="state.gambiaBK.percentage"/>
                        <KpiCard name="'The Gambia FT (-30)'" value="state.gambiaFT.value" percentage="state.gambiaFT.percentage"/>
                        <KpiCard name="'Average'" value="state.average.value" percentage="state.average.percentage"/>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="row">
                        <!-- Additional content for the right column can be added here -->
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
