<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_config_settings" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sensor.data.import</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                 <div class="app_settings_block o_not_app"
                    string="Data Import Settings"
                    data-string="Data Import Settings"
                    data-key="sensor_data_import"
                    groups="base.group_user">
                <div class="settings" string="Sensor Data Import Settings">
                    <div class="app_settings_block" data-key="sensor_data_import">
                        <h2>Sensor Data Import Settings</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <label for="app_id" class="o_form_label">App ID</label>
                                <field id="app_id" name="app_id" type="text" class="o_form_input"/>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <label for="app_key" class="o_form_label">App Key</label>
                                <field name="app_key" type="text" class="o_form_input"/>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <label for="app_secret" class="o_form_label">App Secret</label>
                                <field name="app_secret" type="text" class="o_form_input"/>
                            </div>
                        </div>
                    </div>
                </div>
                 </div>
            </xpath>
        </field>
    </record>
</odoo>
